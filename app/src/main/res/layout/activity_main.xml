<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.skyscanner.backpack.card.BpkCardView
        android:id="@+id/flightCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerStyle="large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.skyscanner.backpack.text.BpkText
                android:id="@+id/flight_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="London (LHR) â†’ Paris (CDG)"
                style="@style/bpkTextHeading1"/>

            <com.skyscanner.backpack.text.BpkText
                android:id="@+id/flight_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure: 10:30 AM"
                style="@style/bpkTextBodyDefault"/>

            <com.skyscanner.backpack.text.BpkText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival: CDG 13:00 PM"
                style="@style/bpkTextBodyDefault"/>

        </LinearLayout>
    </com.skyscanner.backpack.card.BpkCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
